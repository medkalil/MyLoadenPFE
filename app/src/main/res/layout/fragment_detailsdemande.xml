<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/progress_bar_detail_client"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:translationZ="1dp"
        >
        <ProgressBar
            android:id="@+id/tt"
            android:layout_width="50dp"
            android:indeterminateOnly="true"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linea_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linea_2_forclient"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/label_moaraf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="@string/label_moaraf_talab"
                        android:textColor="@color/blanch" />

                    <TextView
                        android:id="@+id/id_dem_forcleint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/blanch" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/rl_cadre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <LinearLayout

                        android:id="@+id/linear_ident"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/linea_moarf_dem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:id="@+id/linea9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="5dp">
                                >

                                <TextView
                                    android:id="@+id/label_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="@string/label_type_demande" />

                                <TextView
                                    android:id="@+id/type_dem_forcleint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/fdh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="5dp">
                                >

                                <TextView
                                    android:id="@+id/label_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="@string/label_date_demande" />

                                <TextView
                                    android:id="@+id/date_dem_forcleint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="right"
                                    android:text="" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/statut_dem_forcleint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linea_dist"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/label_dist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="@string/label_distance"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/distance_dem_forcleint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linea_duree"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/label_duree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="@string/label_duree" />

                    <TextView
                        android:id="@+id/duree_dem_forcleint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linea_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/place_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="@string/label_lieu" />

                    <TextView
                        android:id="@+id/place_lieu_ta7mil_forclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView_tahmil_forclient"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linea_place2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="5dp"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/place_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="@string/lieu_taslim" />

                    <TextView
                        android:id="@+id/place_lieu_tanzil_forclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:text="" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView_tanzil_forclient"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                    android:id="@+id/show_offres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/red"
                    android:text="@string/label_btn_listeoffre" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>